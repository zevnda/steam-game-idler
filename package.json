{
  "name": "steam-game-idler",
  "version": "0.1.0",
  "description": "Farm trading cards, manage achievements, and boost playtime effortlessly with Steam Game Idler",
  "author": "zevnda",
  "private": true,
  "workspaces": [
    "docs"
  ],
  "scripts": {
    "dev": "next dev",
    "dev:docs": "pnpm --filter steam-game-idler-docs dev",
    "dev:all": "pnpm td & pnpm --filter steam-game-idler-docs dev",
    "pub:docs": "pnpm --filter steam-game-idler-docs pub",
    "build": "next build",
    "build:docs": "pnpm --filter steam-game-idler-docs build",
    "build:all": "pnpm build && pnpm build:docs",
    "start": "next start",
    "start:docs": "pnpm --filter steam-game-idler-docs start",
    "lint": "run-s -c typecheck lint:js",
    "lint:js": "eslint",
    "lint:docs": "pnpm --filter steam-game-idler-docs lint",
    "lint:all": "pnpm lint && pnpm lint:docs",
    "typecheck": "tsc --noEmit",
    "tauri": "tauri",
    "prepare": "husky || true",
    "prettier": "prettier --write .",
    "td": "tauri dev",
    "tb": "tauri build",
    "dd": "pnpm --filter steam-game-idler-docs dev",
    "main": "git checkout main && git pull && git fetch -p"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@heroui/react": "^2.8.7",
    "@internationalized/date": "^3.10.0",
    "@tauri-apps/api": "~2.8.0",
    "@tauri-apps/plugin-autostart": "~2.5.0",
    "@tauri-apps/plugin-clipboard-manager": "^2.3.2",
    "@tauri-apps/plugin-dialog": "~2.4.2",
    "@tauri-apps/plugin-fs": "~2.4.0",
    "@tauri-apps/plugin-notification": "~2.3.0",
    "@tauri-apps/plugin-os": "~2.3.0",
    "@tauri-apps/plugin-process": "~2.3.0",
    "@tauri-apps/plugin-shell": "~2.3.0",
    "@tauri-apps/plugin-updater": "~2.9.0",
    "@tauri-apps/plugin-window-state": "~2.4.0",
    "framer-motion": "12.23.25",
    "geist": "^1.3.1",
    "github-markdown-css": "^5.8.1",
    "i18next": "^25.6.3",
    "i18next-browser-languagedetector": "^8.0.4",
    "moment": "^2.30.1",
    "next": "^16.0.10",
    "next-themes": "^0.4.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-i18next": "^16.3.5",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-window": "^1.8.11",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.1",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@next/eslint-plugin-next": "^16.1.5",
    "@tailwindcss/postcss": "^4.1.17",
    "@tauri-apps/cli": "^2.8.4",
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.2",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-airbnb-extended": "^3.0.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^17.2.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.8.3"
  }
}
