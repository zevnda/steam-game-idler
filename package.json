{
  "name": "steam-game-idler",
  "version": "0.1.0",
  "description": "Farm trading cards, manage achievements, and boost playtime effortlessly with Steam Game Idler",
  "author": "zevnda",
  "private": true,
  "workspaces": [
    "docs"
  ],
  "scripts": {
    "dev": "next dev",
    "dev:docs": "pnpm --filter steam-game-idler-docs dev",
    "dev:all": "pnpm --parallel dev",
    "build": "next build",
    "build:docs": "pnpm --filter steam-game-idler-docs build",
    "build:all": "pnpm build && pnpm build:docs",
    "start": "next start",
    "start:docs": "pnpm --filter steam-game-idler-docs start",
    "lint": "next lint",
    "lint:docs": "pnpm --filter steam-game-idler-docs lint",
    "lint:all": "pnpm lint && pnpm lint:docs",
    "tauri": "tauri",
    "prepare": "husky",
    "prettier": "prettier --write .",
    "td": "tauri dev",
    "git:main": "git checkout main && git pull && git fetch -p"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@heroui/react": "^2.7.5",
    "@internationalized/date": "^3.7.0",
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/plugin-autostart": "~2",
    "@tauri-apps/plugin-dialog": "~2",
    "@tauri-apps/plugin-fs": "~2",
    "@tauri-apps/plugin-notification": "~2",
    "@tauri-apps/plugin-os": "~2",
    "@tauri-apps/plugin-process": "~2",
    "@tauri-apps/plugin-shell": "~2",
    "@tauri-apps/plugin-updater": "~2",
    "@tauri-apps/plugin-window-state": "~2",
    "framer-motion": "^12.6.2",
    "geist": "^1.3.1",
    "i18next": "^24.2.3",
    "i18next-browser-languagedetector": "^8.0.4",
    "moment": "^2.30.1",
    "next": "^15.2.2",
    "next-themes": "^0.4.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.4.1",
    "react-icons": "^5.1.0",
    "react-markdown": "^10.1.0",
    "react-window": "^1.8.11",
    "rehype-raw": "^7.0.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@tauri-apps/cli": "^2.3.1",
    "@types/node": "^22.13.14",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "9",
    "eslint-config-next": "15.2.4",
    "eslint-config-prettier": "^10.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "postcss": "^8",
    "prettier": "^3.5.3",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm lint --dir src"
    ],
    "**/*": "prettier --write --ignore-unknown"
  }
}
