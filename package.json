{
  "name": "steam-game-idler",
  "version": "0.1.0",
  "description": "Farm trading cards, manage achievements, and boost playtime effortlessly with Steam Game Idler",
  "author": "zevnda",
  "private": true,
  "workspaces": [
    "docs"
  ],
  "scripts": {
    "dev": "vite",
    "dev:docs": "pnpm --filter steam-game-idler-docs dev",
    "dev:all": "pnpm td & pnpm --filter steam-game-idler-docs dev",
    "pub:docs": "pnpm --filter steam-game-idler-docs pub",
    "build": "tsc -b && vite build",
    "build:docs": "pnpm --filter steam-game-idler-docs build",
    "build:all": "pnpm build && pnpm build:docs",
    "start": "vite preview",
    "start:docs": "pnpm --filter steam-game-idler-docs start",
    "lint": "run-s -c typecheck lint:js",
    "lint:js": "eslint",
    "lint:docs": "pnpm --filter steam-game-idler-docs lint",
    "lint:all": "pnpm lint && pnpm lint:docs",
    "typecheck": "tsc --noEmit -p ./tsconfig.app.json",
    "tauri": "tauri",
    "prepare": "husky || true",
    "prettier": "prettier --write .",
    "td": "tauri dev",
    "tb": "tauri build",
    "dd": "pnpm --filter steam-game-idler-docs dev",
    "main": "git checkout main && git pull && git fetch -p"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@fontsource-variable/inter": "^5.2.8",
    "@heroui/react": "^2.8.8",
    "@internationalized/date": "^3.10.1",
    "@tailwindcss/vite": "^4.1.18",
    "@tauri-apps/api": "~2.8.0",
    "@tauri-apps/plugin-autostart": "~2.5.0",
    "@tauri-apps/plugin-clipboard-manager": "^2.3.2",
    "@tauri-apps/plugin-dialog": "~2.4.2",
    "@tauri-apps/plugin-fs": "~2.4.0",
    "@tauri-apps/plugin-notification": "~2.3.0",
    "@tauri-apps/plugin-os": "~2.3.0",
    "@tauri-apps/plugin-process": "~2.3.0",
    "@tauri-apps/plugin-shell": "~2.3.0",
    "@tauri-apps/plugin-updater": "~2.9.0",
    "@tauri-apps/plugin-window-state": "~2.4.0",
    "@unhead/react": "^2.1.2",
    "date-fns": "^4.1.0",
    "framer-motion": "12.29.2",
    "geist": "^1.5.1",
    "github-markdown-css": "^5.8.1",
    "i18next": "^25.8.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "next-themes": "^0.4.6",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-error-boundary": "^6.1.0",
    "react-i18next": "^16.5.4",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-router": "^7.13.0",
    "react-window": "^2.2.5",
    "tailwindcss": "^4.1.18",
    "zod": "^4.3.6",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.1",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@tauri-apps/cli": "^2.8.4",
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@unhead/addons": "^2.1.2",
    "@vitejs/plugin-react": "^5.1.2",
    "babel-plugin-react-compiler": "^1.0.0",
    "eslint": "^9.39.2",
    "eslint-config-airbnb-extended": "^3.0.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^17.2.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-checker": "^0.12.0",
    "vite-tsconfig-paths": "^6.0.5"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@7.2.5"
    }
  }
}
